<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/csl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/csl_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_account_circle_blue_grey_400_48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:padding="3dp"
        android:id="@+id/csl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/csl_comment"
        android:layout_marginStart="12dp" />

    <TextView
        android:padding="3dp"
        android:id="@+id/csl_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/csl_name"
        android:layout_alignBottom="@+id/csl_name"
        android:layout_toEndOf="@+id/csl_name" />
    <TextView
        android:id="@+id/csl_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:textSize="16sp"
        android:text="Comment"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/csl_name"
        android:layout_toEndOf="@+id/csl_avatar" />
</RelativeLayout>