<resources>

    <!-- Dark application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <!--Style for edit text-->
    <style name="editText1">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--Style for edit text-->
    <style name="blackTextView">
        <item name="android:textColor">@color/colorMovieGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <!--Style for edit text-->
    <style name="blackTextViewField">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--Style for edit textfrag-->
    <style name="blackTextFragView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--Style for label-->
    <style name="moive_label">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--This style if for spot Dialog-->
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Please wait....</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <!--This style if for spot Dialog-->
    <style name="Loading" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loading ....</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="movieLabels1">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/colorMovieGray</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--Splash Screen-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
